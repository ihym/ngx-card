    "url": "https://github.com/ihym/ngx-card/issues"
  },
  "main": "bundles/ngx-card.umd.js",
  "module": "module.js",
  "typings": "module.d.ts",
  "scripts": {
    "lint": "gulp lint:ts --failOnError=true",
    "build": "gulp",
